<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- App Title and Subtitle -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GateKeep"
                android:textAlignment="center"
                android:textColor="@color/teal_400"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mindful App Usage"
                android:textAlignment="center"
                android:textColor="@color/text_secondary_light"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- App Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/dark_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About GateKeep"
                        android:textColor="@color/teal_300"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:text="GateKeep helps you be more mindful of your app usage by creating a moment of pause before you open selected apps."
                        android:textColor="@color/text_primary_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Take a moment to breathe, reflect on why you're using the app, and make a conscious choice to continue or close it."
                        android:textColor="@color/text_primary_light" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Navigation Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Quick Navigation"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Apps Button -->
            <Button
                android:id="@+id/btnApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/teal_700"
                android:padding="16dp"
                android:text="Manage Tracked Apps"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_list"
                android:drawablePadding="8dp"
                android:textAlignment="textStart"
                android:drawableTint="@android:color/white" />

            <!-- Stats Button -->
            <Button
                android:id="@+id/btnStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/teal_700"
                android:padding="16dp"
                android:text="View Usage Statistics"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:textAlignment="textStart"
                android:drawableTint="@android:color/white" />

            <!-- Share Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/teal_900"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share GateKeep"
                        android:textAlignment="center"
                        android:textColor="@color/teal_200"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Help your friends be more mindful about their app usage too!"
                        android:textAlignment="center"
                        android:textColor="@color/text_primary_light" />

                    <Button
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/teal_400"
                        android:padding="16dp"
                        android:text="Share with Friends"
                        android:textColor="@android:color/black"
                        android:drawableStart="@drawable/ic_share"
                        android:drawablePadding="8dp"
                        android:textAlignment="center"
                        android:drawableTint="@android:color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    
    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/dark_background"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_nav_menu" />
        
</androidx.coordinatorlayout.widget.CoordinatorLayout> 