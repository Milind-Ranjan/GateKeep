<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />
    
    <!-- Particle Animation Container -->
    <FrameLayout
        android:id="@+id/welcomeParticleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Orbital Circle Container -->
    <FrameLayout
        android:id="@+id/welcomeOrbitalContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    
    <!-- Logo Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Logo Components - Layered -->
        <FrameLayout
            android:id="@+id/logoFrame"
            android:layout_width="230dp"
            android:layout_height="230dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <!-- Background Layer - Transparent placeholder instead of logo_background -->
            <View
                android:id="@+id/logoBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
            <!-- Main Logo Layer -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_gatekeep"
                android:contentDescription="GateKeep Logo" />
            
            <!-- Foreground Layer -->
            <ImageView
                android:id="@+id/logoForeground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_foreground"
                android:contentDescription="Logo Foreground" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GateKeep"
        android:textColor="@color/teal_200"
        android:textSize="40sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:alpha="0"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoContainer" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mindful Digital Wellness"
        android:textColor="@color/text_primary_light"
        android:textSize="18sp"
        android:alpha="0"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameText" />

    <!-- Get Started Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="64dp"
        android:alpha="0"
        android:backgroundTint="@color/teal_700"
        android:text="GET STARTED"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@android:color/white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 