<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/dark_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- App Icon (placeholder) -->
        <View
            android:id="@+id/viewAppIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_square"
            android:backgroundTint="@color/teal_900" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Instagram" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opens: "
                    android:textColor="@color/text_secondary_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvOpenCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_300"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Mindful closes: "
                    android:textColor="@color/text_secondary_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCloseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_300"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="2" />
            </LinearLayout>
        </LinearLayout>

        <!-- Trend Indicator (optional) -->
        <ImageView
            android:id="@+id/ivTrend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_trending_down"
            android:tint="@color/teal_200"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 